.container {
  padding-bottom: 98rpx;
}

.bg-box {
  width: 100%;
  height: 480rpx;
  position: relative;
  background: linear-gradient(to bottom,#f97c39 20%,#fff);
  
}
.activity-box
{
  width: 96%;
  height: 240rpx;
  background-color: #f7e6de;
  border-radius: 30rpx;
  position: absolute;
  margin: 50rpx 2%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.content-list
{
  width: 96%;
  margin: 0 2%;
  top:340rpx;
  /* background-color: #f7e6de; */
  position: absolute;
}
.list-menu
{
  width: 100%;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}
.menu-item
{
  height: 140rpx;
  background-color: rgb(224, 224, 224);
  flex: 4;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10rpx;
  border-radius: 12rpx;

}
.menu-item:last-child{
  margin-right: 0;
}
.adv-cover
{
  height: 300rpx;
  margin-top: 100rpx;
  background-color: rgb(231, 231, 231);
  display: flex;
  align-items: center;
  justify-content: center;
}