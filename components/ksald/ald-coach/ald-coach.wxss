/* 教练列表 */
.course-li{
  width: 96%;
  height: auto;
  margin: 0 2% 0 2%;
  box-sizing: border-box;
  
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;

}
.course-li-img{
  width: 100%;
  position: absolute;
 
  
  top: 0;
  left: 0;
  z-index: 0;
  /* border-radius: 20rpx; */
  border-radius: 0 0 20rpx 20rpx;
}

.course-li-title,.course-li-name,.course-li-des{
  
  position: absolute;
  left: 40rpx;
  z-index: 1;
}
.course-li-title{
  width: 100%;
  top: 30rpx;
  left: 40rpx;
  color: #ffae23;
}
.course-li-name{
  width: 100%;
  top:156rpx;
  font-size: 32rpx;
}
.course-li-des
{
  width: 92%;
  top:220rpx;
  height: 100rpx;
  line-height: 50rpx;
  color: #312f30;
  font-size: 26rpx;
  /* 文字太长...号 */
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /*两行 */
}

.course-li-swiper{
  position: absolute;
  left: 0;
  top:340rpx;
  z-index: 1;

  height: 200rpx;
  width: 100%;


}

/*轮播*/
.tui-banner-swiper-coach {
  width: 100%;
  height: 200rpx;
  /* padding: 0 15% 0 15%; */
  /* border-radius: 0 0 26rpx 26rpx; */
  overflow: hidden;
  box-sizing: border-box;
}

/* .tui-banner-item-coach {

  box-sizing: border-box;
  height: 200rpx;
  
} */

.tui-slide-image-coach {
  width: 540rpx;
  height: 200rpx;


  display: block;
  border-radius: 12rpx;
  /* transition: all 0.1s linear; */
}

.tui-banner-scale-coach {
  transform: scaleY(0.9);
  transform-origin: center center;
}

.tui-banner-swiper-coach .wx-swiper-dot {
  width: 8rpx;
  height: 8rpx;
  display: inline-flex;
  background: none;
  justify-content: space-between;
}

.tui-banner-swiper-coach .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  overflow: hidden;
}

.tui-banner-swiper-coach .wx-swiper-dot-active::before {
  background: #fff;
}

.tui-banner-swiper-coach .wx-swiper-dot.wx-swiper-dot-active {
  width: 16rpx;
}

/*轮播END*/

