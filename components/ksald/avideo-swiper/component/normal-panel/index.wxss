.panel {
	width: 100%;
	height: 100%;
	position: relative;
	left: 0;
	top: 0;
}

.title {
	display: block;
	color: red;
	width: 250px;
	height: 30px;
	position: absolute;
	left: 16px;
	top: 58px;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  bottom: 340rpx;
  bottom: calc(env(safe-area-inset-bottom, 0px) + 320px);
  right: 36rpx;
  border: 0;
  margin: 0;
  padding: 0;
  
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  align-self: center;
  display: block;


}

.panel .forward-btn,.panel .praise-btn,.panel .message-btn,.panel .star-btn {
  position: absolute;
  bottom: 110px;
  right: 40rpx;
  border: 0;
  margin: 0;
  padding: 0;
  width: auto;

  width: 70rpx;
  height: 70rpx;
  background-color: rgba(0, 0, 0, .4);
  border-radius: 35rpx;
}
.panel .forward-btn{

  bottom: calc(env(safe-area-inset-bottom, 0px) + 80px);

}
.panel .praise-btn {
  bottom: calc(env(safe-area-inset-bottom, 0px) + 260px);
}
.panel .message-btn {
  bottom: calc(env(safe-area-inset-bottom, 0px) + 200px);
}
.panel .star-btn {
  bottom: calc(env(safe-area-inset-bottom, 0px) + 140px);
}