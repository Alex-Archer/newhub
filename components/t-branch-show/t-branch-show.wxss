}

.locate-ico {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  float: left;
  display:flex;
  justify-content:flex-end;
}

.locate-txt {
  width: 400rpx;
  padding-left: 15rpx;
  display: flex;
  flex-direction:column;
}

.locate-txt-t {
  float: left;
  height: 35rpx;
  line-height: 35rpx;
  font-size: 1rem;
  padding-top: 2rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: left;
}

.locate-txt-d {
  width: 100%;
  float: left;
  font-size: 22rpx;
  height: 25rpx;
  line-height: 25rpx;
  margin: 10rpx 0 0 4rpx;

}
.locate-txt-text {


  /* height: 25rpx;
  line-height: 25rpx; */
  font-size: 30rpx;

}
/* 文字太长...号 */
.locate-txt-text,.locate-txt-d 
{    
  
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.locate-dorp-ico {
  width: 5%;
  height: 20rpx;
  line-height: 20rpx;
  float: left;
  padding-top: 10rpx;
}