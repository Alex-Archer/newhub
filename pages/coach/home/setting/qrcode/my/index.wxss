/* 二维码页采来 */


.hidden-box {
    padding: 35rpx 40rpx 27rpx 40rpx;
    box-sizing: border-box;
    color: #333;
    /* border-top: 1rpx solid #EAEEF1; */
}


.qrcode-box {
    width: 100%;
    background-color: #fff;
    border-radius: 20rpx;
    position: relative;
    display: flex;
    justify-content: center;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    padding: 0 0 60rpx 0;


}

.qrcode {
    width: 400rpx;
    height: 400rpx;
    background-color: rgb(240, 240, 240);
    margin: 240rpx auto 43rpx auto;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}
.qrcode-creat-img
{
  width: 400rpx;
  height: 400rpx;
  z-index: 1000;
  position: absolute;
  left: 0;
  top: 0;
}
.qrcode-code
{ 
  
  width: 400rpx;
  height: 400rpx;
  z-index: 100;
  position: absolute;
  left: 0;
  top: 0;

}
.qrcode-loading
{
  width: 400rpx;
  height: 400rpx;
  background-color: rgb(240, 240, 240);
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgb(138, 138, 138);
  font-size: 26rpx;
}

