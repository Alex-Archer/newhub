/* 不显示滚动条*/
.container {
    height: 100vh;
    width: 100vw;
    padding: 0;
    margin: 0;
    overflow-y: scroll;
    position: relative;
}

.container::-webkit-scrollbar {
    display: none;
}

.page-scroll {
    height: calc(100vh - 180rpx);
    /*底部菜单高，也可以放style中计算*/
    width: 100vw;

}

/* 不显示滚动条END */

/* 背影图 */
.bgImage {
    position: absolute;
    height: 100%;
    width: 100%;
    z-index: -1;
    opacity: 0.8;
    overflow: hidden;
}

.bgImage>image {
    /* transform: scale(1.2); */
    height: 200%;
    width: 200%;
    background: rgba(0, 0, 0, 0.2);
    -webkit-filter: blur(15px);
    -moz-filter: blur(15px);
    -o-filter: blur(15px);
    -ms-filter: blur(15px);
    filter: blur(15px);
}

/* 背影图END */



