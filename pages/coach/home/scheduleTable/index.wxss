
/* 不显示滚动条*/
.container {
  height: 100vh;
  width: 100vw;
  padding: 0;
  margin: 0;
  overflow-y: scroll;

}
.container::-webkit-scrollbar {
  display: none;
}

/* 不显示滚动条END */

.fixed-box
{
  width: 100vw;
  height: 240rpx;
  overflow: hidden;
   position: fixed;
   top: 0;
   left: 0;
}


/* 头部 */
.page-head{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content:space-between;
  padding: 0 3%;
  box-sizing: border-box;
  background-color: #fff;
}
.head-time ,.head-menu
{
  display: flex;
  align-items: center;
  justify-content:space-between;
}
/* 为了方便下拉点击范围变大 */
.head-time
{
  height: 100rpx;
  padding-right: 50rpx;
}
.head-time .time-title
{
  font-size: 32rpx;
  font-weight: bolder;
}
.head-time .time-ico
{
  margin-left: 15rpx;
}


.head-menu .menu-a
{
    font-size: 28rpx;
    padding-right: 20rpx;
    color:#0000ff;
    font-weight: bold;
}
.head-menu .menu-b
{
    color: #319fa6;
    font-weight: bold;
    font-size: 28rpx;
}
/* 头部END */

/* 周日期 */
.head-date
{

  height: 140rpx;
  width: 100vw;
  border-top: 1px solid #ff6d6d;
  border-bottom: 1px solid #ff6d6d;
  box-sizing: border-box;
  position: absolute;
  top: 100rpx;
  left: 0;
  background-color: #fff;

  /* display: none; */

}

/* 周日期 END*/

/* 图标图示 */
.table-ico
{
  height: 60rpx;
  width: 100vw;
  display: flex;
  background-color: #f8f8f8;
}
.ico-item
{

  display: flex;
  align-items: center;
  justify-content: center;

}
.item-title{
  font-size: 26rpx;
}
.item-color{
  height: 12rpx;
  width: 24rpx;
  margin-right: 12rpx;
}
/* 图标图示END */


/* 头部 */
.table-head{
  background-color: #999;
  height: 80rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
 
}
.head-item
{
  flex:1!important;
  background-color: #fafafa;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
  border-right: 1px solid #ccc;
  font-size: 28rpx;
  flex-grow: 1;
  background-color: rgb(238, 238, 238);
}
.head-item:last-child
{
  border-right:0;
}

.head-item-li
{
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}
/* 头部END */

/* 身体 */
.table-body
{
  /* height: 3200rpx; */
  display: flex;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  padding-bottom: 40rpx;
  margin-top: 240rpx;

}
.body-item
{
  flex:1!important;
  background-color: #fafafa;
  /* height: 800rpx; */
  /* line-height: 80rpx; */
  text-align: center;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  border-bottom: 1px solid rgb(228, 228, 228,0.6);
  border-right: 1px solid rgb(228, 228, 228,0.6);
  /* flex-grow: 1; */
}
.body-item:last-child
{
  border-right:0;
}
.body-item-time
{
  height: 60px;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  display: flex;
  align-items:flex-start;
  justify-content: center;
background-color: rgb(238, 238, 238);
  border-bottom: 1px solid #ccc;
  font-size: 22rpx;
  color: #888;
  font-weight: bold;
}
.body-item-li
{
  /* flex-basis:auto ; */
  height: 30px;
  width: 100%;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid rgb(228, 228, 228,0.6);
  background-color: #fff;
  /* 文字色 */
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}
.item-avatar
{
  height: 50rpx;
  width: 50rpx;

  flex-shrink: 0;
  display: block;
  border-radius: 50%;

}


/* 身体END */

