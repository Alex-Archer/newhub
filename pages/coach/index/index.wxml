    <view class="tui-box">
      <view class="tui-title">
        <text class="tui-title-text">教练介绍</text>
      </view>
      <view class="tui-content-text">{{uInfo.introduce?uInfo.introduce:'汗水与决心的熏陶下，塑造出柔韧与优雅并存的体型之美...'}}</view>

    </view>
    <!--教练介绍 END-->
