    <view class="tui-box" wx:if="{{courseList.length>0}}">
      <view class="tui-title">
        <text class="tui-title-text">课程</text>
      </view>
      <view class="tui-course">
       <block wx:for="{{courseList}}" wx:for-item="item" wx:for-index="index" wx:key="index">
        <!--课程列表-->
        <view class="tui-course-item">
          <image src="{{item.poster}}" class="tui-course-img"></image>
          <view class="tui-course-info">
            <view class="tui-course_title">{{item.title}}</view>
            <view class="tui-course_item">课程时间:{{parse.secondToHm(item.starttime)}}~{{parse.secondToHm(item.endtime)}}</view>
            <!-- <view class="tui-course_item">课程日期:</view> -->
            <view class="tui-course_tag">
              <tui-tag wx:for="{{item.label}}" wx:key="labelindex" wx:for-item="itemTag" margin="0 6rpx 0 0" padding="10rpx 6rpx 10rpx 6rpx" shape="circle" size="18rpx" type="btn-gray" bindclick="show">{{itemTag.title}}</tui-tag>
            </view>
          </view>
          <view class="tui-course-button" bind:tap="gobuy">
             <view class="tui-course_price"><text>¥{{parse.formatRMB(item.price)}}</text></view>
            <!-- <view class="tui-course_price"><text>¥{{parse.formatRMB(item.price)}}</text>/节</view> -->
            <tui-button margin="10rpx 0 0 0" type="warning" shape="circle" width="120rpx" height="45rpx" size="22" data-id="{{item.id}}" bind:tap="groupShow" data-enrollstate="{{item.enrollstate}}" data-registerednum="{{item.registerednum}}" data-peoplenum="{{item.peoplenum}}">立即购买</tui-button>
