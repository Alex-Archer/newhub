page {
	height: 100%;
	display: flex;
	justify-content: center;
	background-color: #ffffff;
	overflow: hidden;
}

.container {
	width: 100%; 
	height: 100%;
	background-color: #ffffff;
}




.tui-maps-container {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.tui-map {
  width: 100%;
  /* height: 600rpx; */
  /* height: 600rpx; */
  height: 100vh;
  /* max-height: 600rpx; */

  display: block;
}

.tui-cover-back {
  width: 60rpx;
  height: 60rpx;
  position: fixed;
  /* top: 60rpx; */
  /* top: 100rpx; 移到动态获取*/
  left: 30rpx;
}


.tui-current-img {
	width: 76rpx;
	height: 76rpx;
	border-radius: 50%;
	box-shadow: 0 15rpx 10rpx -15rpx #bbb;
	position:absolute;
  /* top: 670rpx; */
  bottom: 5vh;
	right: 40rpx;
	z-index: 10;
}

.cover-des
{
  height: 40rpx;
  line-height: 40rpx;
  padding: 4rpx 10rpx;
  margin: 0 0 6rpx 10rpx;
  position:absolute;
  left:0rpx;
  bottom: 0rpx;
  font-size: 24rpx;
  background-color: rgb(255,255,255,.8);
  border-radius: 10rpx;
  color: rgb(116, 116, 116);
}



/*===========*/



.cover-menu
{
  height:90rpx;
  width: 40%;
  margin: 0 30%;
  line-height: 50rpx;
  position:absolute;
  left:0rpx;
  /* background-color: rgb(255,255,255,.8); */
  display: flex;
  align-items: center;
  justify-content: center;
}
.menu-item
{
  font-size: 30rpx;

  color: rgb(0, 0, 0);
  display: flex;
  justify-content: center;
  margin: 0 10rpx;
  padding: 0 6rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  
}
.menu-item.active
{
  font-size: 34rpx;
  color: #ff7900;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  border-bottom:3px solid #ff7900;
}
/* 解决IOS中下划线 active 不显示 */
.active-box
{
  font-size: 34rpx;
  color: #ff7900;
  display: flex;
  flex-direction: column;
}
.menu-item .active-view
{
  height: 3px;
  width: 100%;
  background-color:#ff7900;
}
