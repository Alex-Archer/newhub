}
.tui-header__center {
  position: absolute;
  width: 100%;
  height: 136rpx;
  left: 0;
  top: 150rpx;/*136*/
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.tui-avatar {
  flex-shrink: 0;
  width: 112rpx;
  height: 112rpx;
  display: block;
  border-radius: 50%;
}

.tui-info {
  width: 55%;
  padding-left: 30rpx;
}

.tui-nickname {
  font-size: 30rpx;
  font-weight: 500;
  color: #fff;
  display: flex;
  align-items: center;
  padding-bottom: 12rpx;
}
.tui-vip__box{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #fff;
  font-weight: bold;
  padding: 4rpx 0;
}
.tui-vip__text{
  padding: 0 8rpx;
}
.tui-vip__icon{
  width: 28rpx;
  height: 28rpx;
  flex-shrink: 0;
}
