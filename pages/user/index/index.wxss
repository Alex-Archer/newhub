/* 会员卡片 */
.tui-vip{
  padding: 30rpx 40rpx 30rpx 40rpx;
  background-color: #ffc7b0;
  color: #FFFFFF;
  margin: 20rpx 0;
}
.tui-vip .tui-title{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;  
}
.tui-vip .tui-icon {
  flex-shrink: 0;
  width: 50rpx;
  height: 50rpx;
  display: block;
}
.tui-vip .tui-name{
  width: 65%;
  font-size: 32rpx;
  font-weight: 500;
  padding-left: 10rpx;
  display: flex;
}
.tui-vip .tui-desc{
  font-size: 24rpx;
  margin-top: 10rpx;
  display: flex;
}
